.cash {
  margin: 20rpx 30rpx;
}

.withdrawal {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #f5f5f5;
  z-index: 999;
}

.cash .cash-msg {
  background: #fff;
  border-radius: 12rpx;
  padding-top: 20rpx;
  font-size: 30rpx;
  color: #000;
}

.withdrawal .icon {
  position: absolute;
  left: 50%;
  top: 5%;
  transform: translateX(-50%);
}

.withdrawal .success {
  font-size: 54rpx;
  position: absolute;
  left: 50%;
  top: 31%;
  transform: translateX(-50%);
}

.withdrawal .attenction {
  position: absolute;
  left: 50%;
  top: 40%;
  font-size: 26rpx;
  color: #909090;
  transform: translateX(-50%);
  width: 100%;
  text-align: center;
}
.withdrawal .confirm{
   position: absolute;
  left: 50%;
  top: 50%;
  width: 90%;
  height: 80rpx;
  background-color: #ed2d3c;
  color: white;
  font-size: 26rpx;
  text-align: center;
  line-height: 80rpx;
  transform: translate(-50%,-50%);
  border-radius: 15rpx;
}
.cash .cash-msg .inputWx {
  position: relative;
  padding: 0 20rpx 16rpx;
}

.amend {
  position: absolute;
  top: 50%;
  right: 80rpx;
  color: #ed2d3c;
  transform: translateY(-50%);
  z-index: 999;
}

.cash .cash-msg .inputWx>input {
  position: absolute;
  left: 200rpx;
  top: 0rpx;
  color: #c2c2c2;
  font-size: 34rpx;
}

.point {
  color: #c2c2c2;
  display: inline-block;
  height: 80rpx;
  font-size: 34rpx;
  margin-bottom: -25rpx;
}

.cash .inputMoney {
  padding: 0 20rpx;
}

.cash .inputMoney view>text {
  font-size: 46rpx;
}

.cash .inputMoney view {
  padding-bottom: 6rpx;
}

.cash .inputMoney input {
  display: inline-block;
  font-size: 42rpx;
  height: 82rpx;
  margin-bottom: -18rpx;
  margin-left: 12rpx;
  color: #c2c2c2;
}

.cash .money {
  padding: 16rpx 20rpx;
  border-top: 1rpx solid #f5f5f5;
  font-size: 26rpx;
  color: #999;
}

.cash .sumbit-buttom>view {
  background: #ed2d3c;
  width: 100%;
  height: 78rpx;
  line-height: 78rpx;
  text-align: center;
  color: #fff;
  margin-top: 32rpx;
  margin-bottom: 20rpx;
  border-radius: 14rpx;
  font-size: 32rpx;
}

.cash .sumbit-buttom p {
  text-align: center;
  font-size: 24rpx;
}
