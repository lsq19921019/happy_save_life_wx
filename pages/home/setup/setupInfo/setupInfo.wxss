page {
  background: #fff;
}
.uploadQr{
  text-align: center;
  position: absolute;
  bottom: 150rpx;
  left: 50%;
  transform: translateX(-50%);
  color: #c2c2c2;
}
.lnfo .content {
  margin: 20rpx 30rpx;
}

.lnfo .content textarea {
  color: #333;
  font-size: 30rpx;
  height: 370rpx;
  width: 97%;
  border: 1rpx solid #cecece;
  padding: 10rpx;
  border-radius: 10rpx;
  position: relative;
  background: #fdfdfd;
}

.lnfo .content text {
  color: #c2c2c2;
  position: absolute;
  bottom: 16rpx;
  right: 16rpx;
  font-size: 24rpx;
}

.lnfo .content .qrCode {
  position: relative;
  margin-top: 30rpx;
  border-radius: 10rpx;
  width: 690rpx;
  height: 200rpx;
  background: #fff;
}

.lnfo .content .qrCode .qrcode-img {
  width: 180rpx;
  height: 180rpx;
}

.lnfo .content .qrCode .ask-img {
  position: absolute;
  right: 12rpx;
  bottom: 12rpx;
  width: 30rpx;
  height: 30rpx;
}

.lnfo .content .qrCode .qrcode-button {
  color: #c2c2c2;
  font-size: 22rpx;
  margin-top:12rpx;
}

.lnfo .content .qrCode .qrcode-button p {
  width: 350rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 50rpx;
  text-align: center;
}

.lnfo .content .qrCode .qrcode-button p:nth-child(1) {
  border: 1rpx solid #ed2d3c;
  color: #ed2d3c;
}

.lnfo .content .qrCode .qrcode-button p:nth-child(2) {
  margin-top: 40rpx;
  background: #e5e5e5;
  color: #fff;
}

.submit-buttom {
  position: fixed;
  bottom: 0;
  text-align: center;
  line-height: 100rpx;
  height: 100rpx;
  background: #ed2d3c;
  width: 100%;
  color: #fff;
  font-size: 30rpx;
}

/* 弹出框 */

.jump-box {
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: 100;
  background: rgba(0, 0, 0, 0.5);
  transform: all 0.5s;
  top: 0;
  left: 0;
}

.jump-box .content-box {
  width: 660rpx;
  height: 656rpx;
  overflow: hidden;
  background: #fff;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -330rpx;
  margin-top: -328rpx;
  border-radius: 12rpx;
}

.jump-box .content-box>p {
  font-size: 30rpx;
  width: 100%;
  text-align: center;
  padding: 30rpx 0;
}

.jump-box .content-box .write {
  font-size: 24rpx;
  color: #666;
  padding: 0 30rpx 10rpx;
  display: inline-block;
  line-height: 38rpx;
}

.jump-box .content-box .write>p {
  font-size: 30rpx;
  color: #333;
  padding-bottom: 10rpx;
}

.jump-box .content-box .know {
  margin-top: 20rpx;
  width: 100%;
  height: 110rpx;
  line-height: 110rpx;
  text-align: center;
  border-top: 1rpx solid #ececec;
  color: #ed2d3c;
  font-size: 30rpx;
}
