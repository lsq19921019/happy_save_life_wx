.drawer_box {
  width: 100%;
  height: 100%;
  padding-top: 15rpx;
}

.userInfo {
  width: 100%;
  position: relative;
  height: 100rpx;
}

.user {
  position: absolute;
  top: 0;
  right: 0;
  height: 100%;
  width: 80%;
}

.userName {
  padding-top: 40rpx;
  font-size: 26rpx;
}

.userAd {
  font-size: 20rpx;
  padding-top: 15rpx;
  color: #c1c1c1;
}

.imgStylebg {
  margin: 0 auto;
  width: 92%;
  background-color: white;
}

.drawer_box .imgStyle {
  margin:0 auto;
  width: 550rpx;
  min-height: 625rpx;
  margin-bottom: 16rpx;
  background: #fff;
  overflow: hidden;
  border-radius: 10rpx;
  text-align: center;
  padding:38rpx 0;
}

.drawer_box .imgnone {
  margin: 0 auto;
  width: 550rpx;
  min-height: 625rpx;
  margin-bottom: 16rpx;
  background: #fff;
  overflow: hidden;
  border-radius: 10rpx;
  text-align: center;
  padding: 20rpx 0;
  margin-top: 20rpx;
}

.imgnone image {
  height: 100%;
  width: 100%;
}

.smallNone {
  height: 100rpx;
  width: 100rpx;
  position: absolute;
  top: 20rpx;
  left: 30rpx;
  background-color: rgb(238, 238, 238);
}

.smallNone image {
  height: 100%;
  width: 100%;
}

.smallImg {
  height: 100rpx;
  width: 100rpx;
  margin: 30rpx 10rpx 30rpx 30rpx;
}

.drawer_box .imgStyle image {
  width: 100%;
}

.drawer_box .recommend {
  background: #fff;
  width: 92%;
  height: 200rpx;
  margin: 0 auto 20rpx;
  padding: 32rpx 36rpx 12rpx;
  color: #666;
  font-size: 24rpx;
  border-radius: 10rpx;
  position: relative;
}

.drawer_box .recommend view {
  width: 100%;
  height: 100%;
  font-size: 26rpx;
  overflow: scroll;
}

.drawer_box .noneImg {
  text-align: center;
  margin: 0 auto;
  padding: 200rpx 0;
  width: 660rpx;
  margin-bottom: 16rpx;
  background: #fff;
  overflow: hidden;
  border-radius: 10rpx;
  color: #c1c1c1;
  font-size: 30rpx;
}

.drawer_box .noneImg>image {
  width: 200rpx;
  margin-bottom: 20rpx;
}

.amend {
  width:540rpx;
  margin:50rpx auto 30rpx;
  font-size:30rpx;
  text-align: center;
  color: white;
  height: 80rpx;
  line-height: 80rpx;
  background:url(data:image/png;base64,);
  background-size:100% 100%;

}

.man {
  display: inline-block;
  width: 24rpx;
  height: 24rpx;
}

.woman {
  display: inline-block;
  width: 24rpx;
  height: 24rpx;
}

.submit-buttom {
  position: fixed;
  bottom: 0;
  text-align: center;
  line-height: 100rpx;
  height: 100rpx;
  background: #ed2d3c;
  width: 100%;
  color: #fff;
  font-size: 30rpx;
}
