.Alipay{
  margin:10rpx 30rpx;
}
.stopClick{
  pointer-events: none;
}
.main{
   background:#fff;
}
.Alipay .trip{
  font-size:30rpx;
  color:#595959;
  padding:0 16rpx;
  border-bottom:2rpx solid #f5f5f5;
  position: relative;
}
.Alipay .trip text{
    width:180rpx;
    float:left;
    line-height:90rpx;
    height:90rpx;
}
.Alipay .trip input{
    float:left;
    overflow:visible;
    color:black;
    font-size:26rpx;
    width:475rpx;
    height:90rpx;
}
.button{
  background:#ED2D3C;
  color:#fff;
  text-align: center;
  line-height:80rpx;
  margin:50rpx 20rpx;
  font-size:30rpx;
  border-radius:16rpx;
}
.randCode{
  position: absolute;
  top: 50%;
  right: 10rpx;
  transform: translateY(-50%);
  width:146rpx;
  background-color: #ED2D3C;
  color: white;
  text-align: center;
  line-height: 56rpx;
  border-radius: 12rpx;
  z-index: 1000;
  font-size:24rpx
}